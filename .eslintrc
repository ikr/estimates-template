env:
  browser: true
  mocha: true
  es6: true

parserOptions:
  ecmaVersion: 6
  sourceType: module
  ecmaFeatures:
    jsx: true
    impliedStrict: true

plugins:
  - react

rules:
  accessor-pairs: 2
  array-bracket-spacing:
    - 2
    - never
  arrow-body-style: 2
  arrow-spacing: 2
  brace-style:
    - 2
    - '1tbs'
  callback-return: 2
  camelcase:
    - 2
    -
      properties: always
  comma-dangle:
    - 2
    - never
  comma-spacing: 2
  comma-style: 2
  complexity:
    - 1
    - 8
  computed-property-spacing:
    - 2
    - never
  consistent-return: 2
  constructor-super: 2
  curly:
    - 2
    - multi-line
  default-case: 2
  dot-location:
    - 2
    - property
  dot-notation: 2
  eol-last: 2
  eqeqeq: 2
  func-names: 2
  func-style:
    - 2
    - declaration
  generator-star-spacing: 2
  global-require: 2
  guard-for-in: 2
  handle-callback-err: 2
  indent:
    - 2
    - 4
  jsx-quotes:
    - 2
    - prefer-single
  key-spacing: 2
  linebreak-style:
    - 2
    - unix
  max-depth:
    - 2
    - 4
  max-len:
    - 2
    - 100
  max-nested-callbacks:
    - 2
    - 8
  max-params:
    - 2
    - 5
  max-statements:
    - 2
    - 32
  new-cap: 2
  new-parens: 2
  newline-after-var: 2
  no-confusing-arrow: 2
  no-constant-condition: 2
  no-bitwise: 2
  no-caller: 2
  no-case-declarations: 2
  no-catch-shadow: 2
  no-class-assign: 2
  no-cond-assign:
    - 2
    - always
  no-console: 1
  no-const-assign: 2
  no-continue: 2
  no-control-regex: 2
  no-debugger: 1
  no-delete-var: 2
  no-dupe-args: 2
  no-dupe-class-members: 2
  no-dupe-keys: 2
  no-duplicate-case: 2
  no-else-return: 2
  no-empty-character-class: 2
  no-labels: 2
  no-empty-pattern: 2
  no-empty: 2
  no-eval: 2
  no-ex-assign: 2
  no-extend-native: 2
  no-extra-bind: 2
  no-extra-boolean-cast: 2
  no-extra-semi: 2
  no-fallthrough: 2
  no-floating-decimal: 2
  no-func-assign: 2
  no-implicit-coercion: 2
  no-implied-eval: 2
  no-inner-declarations:
    - 2
    - both
  no-invalid-regexp: 2
  no-invalid-this: 2
  no-irregular-whitespace: 2
  no-iterator: 2
  no-label-var: 2
  no-lone-blocks: 2
  no-lonely-if: 2
  no-loop-func: 2
  no-mixed-requires: 2
  no-multi-spaces: 2
  no-multiple-empty-lines: 2
  no-native-reassign: 2
  no-negated-in-lhs: 2
  no-nested-ternary: 2
  no-new-func: 2
  no-new-require: 2
  no-obj-calls: 2
  no-octal-escape: 2
  no-octal: 2
  no-path-concat: 2
  no-regex-spaces: 2
  no-restricted-syntax:
    - 2
    - LabeledStatement
    - WithStatement
  no-param-reassign:
    - 2
    -
      props: false
  no-process-env: 2
  no-process-exit: 2
  no-proto: 2
  no-redeclare:
    - 2
    -
      builtinGlobals: true
  no-return-assign:
    - 2
    - always
  no-script-url: 2
  no-self-compare: 2
  no-sequences: 2
  no-shadow-restricted-names: 2
  no-shadow:
    - 2
    -
      builtinGlobals: true
      hoist: all
  no-sparse-arrays: 2
  no-sync: 2
  no-this-before-super: 2
  no-throw-literal: 2
  no-undef-init: 2
  no-undefined: 2
  no-undef: 2
  no-unexpected-multiline: 2
  no-unreachable: 2
  no-unused-expressions: 2
  no-unused-vars:
    - 2
    -
      varsIgnorePattern: "^(React|babelPolyfill)$"
  no-use-before-define: 2
  no-useless-call: 2
  no-useless-concat: 2
  no-var: 2
  no-void: 2
  no-warning-comments: 1
  no-with: 2
  object-curly-spacing:
    - 2
    - never
  object-shorthand: 2
  operator-linebreak:
    - 2
    - after
  padded-blocks:
    - 2
    - never
  prefer-arrow-callback: 2
  prefer-const: 2
  prefer-reflect: 2
  prefer-spread: 2
  prefer-template: 2
  quote-props:
    - 2
    - as-needed
  quotes:
    - 2
    - single
  radix: 2
  require-yield: 2
  semi-spacing: 2
  semi: 2
  space-before-blocks:
    - 2
    - always
  space-before-function-paren:
    - 2
    -
      anonymous: always
      named: never
  keyword-spacing:
    - 2
    -
      before: true
      after: true
  space-in-parens:
    - 2
    - never
  space-infix-ops: 2
  space-unary-ops: 2
  spaced-comment:
    - 2
    - always
  strict:
    - 2
    - never
  use-isnan: 2
  valid-typeof: 2
  wrap-iife: 2
  yoda:
    - 2
    - never
extends:
  - plugin:react/recommended
